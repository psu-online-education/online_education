{#
/**
 * @file
 * Overridden implementation for an 'input' #type form element for files.
 *
 * To meet design needs, the input must have a wrapping element
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 *
 * @ingroup themeable
 */
#}
<div class="form-file-wrapper">
  <input{{ attributes }} />{{ children }}
  {% if errors %}
    <div class="form-item__errors form-item--error-message">
      {{ errors }}
    </div>
  {% endif %}
</div>
